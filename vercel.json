{
  "version": 2,
  "name": "medisync",
  "builds": [
    { "src": "index.html", "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "server/src/app.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/src/app.js" },
    { "src": "/fhir/(.*)", "dest": "server/src/app.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}